{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\serve",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      // This allows debugging node apps (Nest, epxress, etc) that are being served through `ng`
      // Will attach a debugging listener so it can be debugged in VSCode
      "name": "Debug Node App (7777)",
      "type": "node",
      "request": "attach",
      "port": 7777
    },
    {
      // This allows debugging node apps (Nest, epxress, etc) that are being served through `ng`
      // Will attach a debugging listener so it can be debugged in VSCode
      "name": "Debug Node App (7778)",
      "type": "node",
      "request": "attach",
      "port": 7778
    },
    {
      // This allows debugging node apps (Nest, epxress, etc) that are being served through `ng`
      // Will attach a debugging listener so it can be debugged in VSCode
      "name": "Debug Node App (0)",
      "type": "node",
      "request": "attach",
      "port": 7770
    },
    {
      // This allows debugging node apps (Nest, epxress, etc) that are being served through `ng`
      // Will attach a debugging listener so it can be debugged in VSCode
      "name": "Launch Node App (7770)",
      "type": "node",
      "request": "launch",
      "env": {
        "DEBUG": "oidc-provider:*"
      },
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\apps\\oidc-provider-nest\\src\\main.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
