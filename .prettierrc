{
  "printWidth": 125,
  "semi": true,
  "singleQuote": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "trailingComma": "none",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "printWidth": 9999,
        "semi": true,
        "parser": "html"
      }
    },
    {
      "files": "*.yml",
      "options": {
        "printWidth": 9999
      }
    }
  ]
}
